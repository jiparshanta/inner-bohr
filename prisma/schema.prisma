// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?
  image         String?
  phone         String?
  role          String    @default("user") // user, admin
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
  companies     Company[]
  payments      Payment[]
}

model SiteSettings {
  id                  String   @id @default("default")
  siteName            String   @default("NepalCompanyReg")
  siteDescription     String?
  contactEmail        String?
  contactPhone        String?
  address             String?
  registrationFee     Float    @default(15000)
  panRegistrationFee  Float    @default(5000)
  maintenanceMode     Boolean  @default(false)
  updatedAt           DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Company {
  id                 String    @id @default(cuid())
  userId             String
  name               String
  nameNepali         String?
  type               String    // pvt_ltd, public_ltd, etc.
  status             String    @default("pending") // pending, under_review, approved, rejected
  registrationNumber String?
  panNumber          String?
  address            String?
  district           String?
  municipality       String?
  wardNo             String?
  capital            String?
  businessObjectives String?
  selectedServices   String?   // JSON string of selected add-on services
  submittedAt        DateTime  @default(now())
  approvedAt         DateTime?
  rejectedAt         DateTime?
  rejectionReason    String?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  payments Payment[]
}

model Payment {
  id            String   @id @default(cuid())
  userId        String
  companyId     String?
  amount        Float
  currency      String   @default("NPR")
  status        String   @default("pending") // pending, completed, failed, refunded
  method        String?  // esewa, khalti, bank_transfer, etc.
  transactionId String?
  description   String?
  paidAt        DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  company Company? @relation(fields: [companyId], references: [id], onDelete: SetNull)
}

// Content Management
model PageContent {
  id          String   @id @default(cuid())
  page        String   // home, about, services, pricing, etc.
  section     String   // hero, features, cta, etc.
  key         String   // title, subtitle, description, etc.
  value       String   // The actual content (can be long text)
  type        String   @default("text") // text, html, image, json
  isPublished Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([page, section, key])
}

model Service {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float?
  icon        String?  // Icon name from lucide-react
  features    String?  // JSON array of features
  isActive    Boolean  @default(true)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model FAQ {
  id          String   @id @default(cuid())
  question    String
  answer      String
  category    String?  // general, registration, payment, etc.
  isPublished Boolean  @default(true)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
